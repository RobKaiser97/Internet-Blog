<html lang="en">
  <head>
    <!-- Meta Information -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Custom Stylesheets -->
    <link rel="stylesheet" type="text/css" href="/css/jass.css" />
    <!-- Page Title -->
    <title>Tech Blog</title>
    <!-- Nature Environment Color Adjustments -->
    <style>
      body { background-color: #1E392A; color: #C2D1C9; } nav {
      background-color: #2C4730; color: #C2D1C9; }
    </style>
  </head>
  <body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid justify-content-center">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link h5" href="/" style="color: #C2D1C9;">Home</a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link h5"
              href="/articles"
              style="color: #C2D1C9;"
            >Articles</a>
          </li>
          <!-- Login Options -->
          {{log "logged in status" loggedIn}}
          {{#if loggedIn}}
            <li class="nav-item">
              <a
                class="nav-link h5"
                href="#"
                id="logout-link"
                style="color: #C2D1C9;"
              >Logout</a>
            </li>
          {{else}}
            <li class="nav-item">
              <a class="nav-link h5" href="/login" style="color: #C2D1C9;">Login</a>
            </li>
          {{/if}}
        </ul>
      </div>
    </nav>
    <!-- Header -->
    <header class="text-center my-4">
      <h1>Welcome to the Tech Blog!</h1>
      <p class="lead">Explore the latest tech articles, tips, and insights.</p>
    </header>
    <!-- Main Content -->
    <main style="background-color: #1a1a1a; color: #ffffff; padding: 20px 0;">
      {{{body}}}
    </main>

    <!-- Logout Script -->
    <script src="/js/logout.js"></script>
  </body>
</html>
