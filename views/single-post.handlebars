<!-- Main Container for Displaying a Post -->
<div class="container my-4" style="background-color: #121212; color: #FFFFFF;">
  <!-- Card to Display the Post -->
  <div class="card" style="background-color: #1E1E1E;">
    <!-- Card Header for Post Title -->
    <div class="card-header" style="background-color: #252525;">
      <h3
        class="card-title text-center"
        style="color: #FFFFFF;"
      >{{post.title}}</h3>
    </div>
    <!-- Card Body for Post Content -->
    <div class="card-body" style="background-color: #1E1E1E;">
      <p class="card-text" style="color: #FFFFFF;">{{post.content}}</p>
    </div>
    <!-- Card Footer for Post Metadata -->
    <div class="card-footer" style="background-color: #252525;">
      <p style="color: #FFFFFF;"><strong>Created by:
        </strong>{{post.user.username}}
        <strong>Created on: </strong>{{format_date post.createdAt}}</p>
    </div>
  </div>
</div>

<!-- Main Container for Comments and Comment Form -->
<div class="container my-4" style="background-color: #121212;">
  <div class="row">
    <!-- Column for Displaying Comments -->
    <div class="col-md-6" style="color: #FFFFFF;">
      {{#each post.comments}}
        <!-- Card for Individual Comments -->
        <h3 class="text-center" style="color: #FFFFFF;">Comments</h3>
        <div class="card mb-4" style="background-color: #1E1E1E;">
          <div class="card-header" style="background-color: #252525;">
            <h3
              class="card-title"
              style="color: #FFFFFF;"
            >{{this.user.username}}</h3>
          </div>
          <div class="card-body" style="background-color: #1E1E1E;">
            <p class="card-text" style="color: #FFFFFF;">{{this.comment}}</p>
          </div>
          <div class="card-footer" style="background-color: #252525;">
            <p style="color: #FFFFFF;"><strong>Created on:
              </strong>{{format_date createdAt}}</p>
          </div>
        </div>
      {{/each}}
    </div>
    <!-- Column for Comment Form -->
    <div class="col-md-6">
      <!-- Card for Comment Input -->
      <div class="card mb-4" style="background-color: #1E1E1E;">
        <div class="card-header" style="background-color: #252525;">
          <h3 style="color: #FFFFFF;">Leave your comment here</h3>
        </div>
        <div class="card-body" style="background-color: #1E1E1E;">
          <textarea
            id="comment-content"
            class="form-control"
            style="background-color: #333333; color: #FFFFFF;"
            rows="2"
          ></textarea>
          <button
            class="btn btn-primary mt-4"
            id="submit-comment"
            data-id="{{post.id}}"
            style="background-color: #007BFF; color: #FFFFFF;"
          >Submit</button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript for Comment Functions -->
<script src="/js/comments.js"></script>